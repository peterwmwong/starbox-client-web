@import 'pos'
@import 'box'
@import 'border'

@import url('http://fonts.googleapis.com/css?family=Cabin+Sketch:400,700|Gloria+Hallelujah|Architects+Daughter|Delius')

.Store
  z-index 1

  > .modal
    display none
    abspos 0px 0px 0px 0px
    background-color rgba(0,0,0,.8)
    z-index 2

    &.enabled
      display block

    > .ServingDrinkModal
      margin 275px auto 0 auto


  > .blackboard
    mg = 25px
    background url('/src/views/blackboard2.png') no-repeat
    background-color #050505
    background-size 100%
    border-radius 10px
    box-shadow 2px 5px 10px #111
    margin 25px auto 0 auto
    overflow hidden
    z-index 1

    > .BeverageList
      width 100%
      height 72%
      margin 15% auto 0 auto
